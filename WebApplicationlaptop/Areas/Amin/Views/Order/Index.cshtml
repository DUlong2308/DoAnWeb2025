@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Danh Sách Đơn Hàng";
}

<h3>Danh Sách Đơn Hàng</h3>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Dropdown để lọc đơn hàng theo trạng thái -->
<div>
    <label for="orderStatusFilter">Lọc theo trạng thái:</label>
    <select id="orderStatusFilter" class="form-control select-update-order" style="width: 20%; height: auto;">
        <option value="">Tất cả Đơn Hàng</option>
        <option value="0">Chưa xác nhận</option>
        <option value="1">Đã xác nhận</option>
        <option value="2">Đã xử lý</option>
    </select>

</div>

<!-- Bảng danh sách đơn hàng -->
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã Đơn Hàng</th>
            <th scope="col">Trạng Thái</th>
            <th scope="col">Ngày Tạo</th>
            <th scope="col">Phương Thức Thanh Toán</th>
            @* <th scope="col">Coupon code</th> *@
            <th scope="col">Hành Động</th>
        </tr>
    </thead>
    <tbody id="orderList">
        @foreach (var order in Model)
        {
            <tr class="order-row" data-status="@order.Status">
                <th scope="row">@order.Id</th>
                <td>@order.OrderCode</td>
                <td>
                    @if (order.Status == 0)
                    {
                        <span class="text text-info">Chưa xác nhận</span>  <!-- Mới thêm trạng thái Chưa xác nhận -->
                    }
                    else if (order.Status == 1)
                    {
                        <span class="text text-success">Đã xác nhận</span> <!-- Đã xác nhận -->
                    }
                    else if (order.Status == 2)
                    {
                        <span class="text text-danger">Đã xử lý</span> <!-- Đã xử lý -->
                    }
                    else
                    {
                        <span class="text text-warning">Trạng thái khác</span> <!-- Trạng thái không xác định -->
                    }
                </td>
                <td>@order.CreateDate.ToString("dd/MM/yyyy")</td>
                <td>@(order.PaymentMethod == "COD" ? "COD" : "Thanh toán Momo")</td>
               @*  <td>@order.CouponCode</td> *@
                <td>
                    <a href="@Url.Action("ViewOrder", "Order", new { area = "Amin", id = order.Id })" class="btn btn-warming btn-sm">ViewOrder</a>
                    <a href="@Url.Action("Conform", "Order", new { area = "Amin", id = order.Id })" class="btn btn-success btn-sm">Conform</a>
                    @if (order.Status != 2)
                    {
                        <a href="@Url.Action("ConfirmDelivery", "Order", new { area = "Amin", id = order.Id })" class="btn btn-info btn-sm">Xác Nhận Đã Giao Hàng</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Lắng nghe sự kiện thay đổi giá trị của select
        document.getElementById("orderStatusFilter").addEventListener("change", function () {
            var status = this.value;

            if (status === "") {
                // Nếu chọn "Tất cả Đơn Hàng", làm mới lại trang
                location.reload(); // Refresh lại trang hiện tại
            } else {
                // Nếu chọn một trạng thái, điều hướng tới URL với tham số status
                window.location.href = '@Url.Action("Index", "Order", new { area = "Amin", status = "__status__" })'.replace("__status__", status);
            }
        });
    </script>
}
