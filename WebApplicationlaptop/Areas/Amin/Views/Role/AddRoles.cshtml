@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = " User Roles";
}

<h2>Manage Roles for @ViewBag.UserName</h2>

<form asp-action="AddRoles">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="userId" value="@ViewBag.UserId" />

    @foreach (var role in ViewBag.AllRoles as List<IdentityRole>)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role.Name"
            @(ViewBag.UserRoles.Contains(role.Name) ? "checked" : "") />
            <label class="form-check-label" for="@role.Name">@role.Name</label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
