@model IEnumerable<WebApplicationlaptop.Models.InformationshopModel>

@{
    ViewData["Title"] = "Thông tin shop";
}

<h1 class="mt-4">Danh sách thông tin shop</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên Shop</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Địa chỉ Bản đồ</th>
            <th>Mô tả</th>
            <th>Logo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@Html.Raw(item.Map)</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>

                        <img src="~/@item.Logo" alt="Logo" width="130" height="auto" />
                       
                      
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Informationshop", new { id = item.Id })" class="btn btn-primary btn-sm">Sửa</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>

