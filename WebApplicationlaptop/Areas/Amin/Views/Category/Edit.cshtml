@model WebApplicationlaptop.Models.CategoryModel

@{
    ViewData["Title"] = "Sửa Danh Mục";
}

<h2>Sửa Danh Mục</h2>

<div class="col-md-7">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Tên Danh mục:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Mô Tả:</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>




        <div class="form-group">
            <label asp-for="Status">Status Danh mục :</label>
            <select asp-for="Status" class="form-control">
                <option value="1">-- :Hiển thị--</option>
                <option value="0">--Ẩn --</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

       

        <button type="submit" class="btn btn-primary">Update Sản Phẩm</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
