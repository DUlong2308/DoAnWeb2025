@model IEnumerable<WebApplicationlaptop.Models.CategoryModel>

@{
    ViewData["Title"] = "Danh sách Danh mục";
}

<h1>Danh sách Danh mục</h1>

<p>
    <a asp-area="Amin" asp-controller="Category" asp-action="AddCategories" class="btn btn-primary">Thêm Danh mục Mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Slug</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.Slug</td>
                <td>@category.Status</td>
                <td>
                    <a asp-area="Amin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Sửa</a>
                    <a asp-area="Amin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>