@model WebApplicationlaptop.Models.SliderModel

@{
    ViewData["Title"] = "Xóa Slider";
}

<h1>Xóa Slider</h1>

<div>
    <h4>Slider</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/images/@Model.Image" alt="@Model.Name" style="width:100px; height:auto;" />
            }
        </dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <h4>Bạn có chắc chắn muốn xóa slider này không?</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>