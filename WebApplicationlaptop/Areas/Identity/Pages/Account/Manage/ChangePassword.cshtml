@page
@model ChangePasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<!-- Thêm phần CSS vào trong phần <style> -->
<style>
    /* Tạo hiệu ứng mượt mà cho toàn bộ trang */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fb;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 700px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .header {
        text-align: center;
        margin-bottom: 30px;
    }

        .header h4 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

    /* Cải thiện giao diện các trường input */
    .form-group label {
        font-weight: bold;
        color: #444;
        margin-bottom: 8px;
        display: block;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        margin-bottom: 15px;
        font-size: 1rem;
        background-color: #f7f7f7;
        transition: border-color 0.3s ease;
    }

        .form-group input:focus {
            border-color: #007bff;
            outline: none;
            background-color: #fff;
        }

    .form-group span {
        font-size: 0.875rem;
        color: #dc3545;
    }

    /* Nút Update Password đẹp hơn */
    .btn-custom {
        background-color: #28a745;
        color: white;
        font-size: 1.2rem;
        padding: 12px 25px;
        border-radius: 50px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 128, 0, 0.1);
        transition: background-color 0.3s, transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
        display: block;
        width: 100%;
    }

        .btn-custom:hover {
            background-color: #218838;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 128, 0, 0.15);
        }

        .btn-custom:active {
            transform: translateY(0);
            box-shadow: 0 4px 12px rgba(0, 128, 0, 0.1);
        }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
    }

</style>

<!-- Nội dung chính -->
<div class="container">
    <div class="header">
        <h4>@ViewData["Title"]</h4>
    </div>

    <form id="change-password-form" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Old Password -->
        <div class="form-group">
            <label asp-for="Input.OldPassword"></label>
            <input asp-for="Input.OldPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>

        <!-- New Password -->
        <div class="form-group">
            <label asp-for="Input.NewPassword"></label>
            <input asp-for="Input.NewPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Nút Update Password -->
        <button type="submit" class="btn btn-custom">Update Password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
