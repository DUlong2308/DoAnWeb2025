@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
      <!-- Giữ Layout = null -->
}

<!-- Thêm Font Awesome -->
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<style>
    .text-danger {
        color: #ff4d4d; /* Màu đỏ để dễ nhìn */
        font-size: 0.875rem; /* Chữ nhỏ hơn một chút */
        font-weight: bold;
    }

    /* Thêm viền cho trường input có lỗi */
    input.is-invalid {
        border-color: #ff4d4d; /* Viền đỏ khi có lỗi */
    }

    /* Cải thiện hiển thị của thông báo lỗi trên form */
    .form-group input:focus.invalid {
        border-color: #ff4d4d; /* Đổi màu viền thành đỏ khi trường có lỗi và được focus */
    }

    /* Thông báo lỗi trong summary */
    .text-danger {
        color: #ff4d4d; /* Màu đỏ cho thông báo lỗi */
        font-size: 0.875rem;
        font-weight: bold;
    }
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #121212; /* Nền đen */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff; /* Chữ trắng */
    }

    .container {
        width: 400px;
        background-color: #fff; /* Khung trắng */
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px 30px;
    }

        .container h1 {
            font-size: 1.8rem;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
        position: relative;
    }

        .form-group label {
            font-size: 0.9rem;
            color: #333; /* Màu chữ cho label */
            margin-bottom: 5px;
            display: block;
        }

        .form-group input {
            width: 100%;
            padding: 10px 10px 10px 35px; /* Thêm padding bên trái để có không gian cho icon */
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-group input:focus {
                border-color: #6c63ff;
            }

        /* Icon ở bên trái input cho Username */
        .form-group i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #6c63ff;
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background: #6c63ff; /* Màu nền nút */
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-primary i {
            margin-right: 8px; /* Khoảng cách giữa icon và text */
        }

        .btn-primary:hover {
            background: #5750d3; /* Màu nền nút khi hover */
        }

    .text-link {
        text-align: center;
        margin-top: 15px;
    }

        .text-link a {
            color: #6c63ff; /* Màu chữ cho liên kết */
            text-decoration: none;
            transition: color 0.3s;
        }

            .text-link a:hover {
                color: #5750d3;
                text-decoration: underline;
            }

    
    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c63ff;
    }
</style>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Email -->
        <div class="form-group">
            <i class="fas fa-envelope"></i> <!-- Icon cho Email -->
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="form-group">
            <i class="fas fa-lock"></i> <!-- Icon ổ khóa cho Password -->
            <label asp-for="Input.Password">Password</label>
            <input id="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <!-- Icon để ẩn hoặc hiện mật khẩu -->
           
        </div>

        <!-- Confirm Password -->
        <div class="form-group">
            <i class="fas fa-lock"></i> <!-- Icon ổ khóa cho Confirm Password -->
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input id="confirmPassword" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Full Name -->
        <div class="form-group">
            <i class="fas fa-user"></i> <!-- Icon cho Full Name -->
            <label asp-for="Input.FullName">Full Name</label>
            <input asp-for="Input.FullName" class="form-control" aria-required="true" placeholder="Full Name" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
            <i class="fas fa-user-plus"></i> Register
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

  
}
