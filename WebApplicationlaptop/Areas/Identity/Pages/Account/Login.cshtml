@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!-- Thêm Font Awesome -->
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.min.css" rel="stylesheet">
</head>

<style>
    .text-danger {
        color: #ff4d4d; /* Màu đỏ để dễ nhìn */
        font-size: 0.875rem; /* Chữ nhỏ hơn một chút */
        font-weight: bold;
    }

    /* Thêm viền cho trường input có lỗi */
    input.is-invalid {
        border-color: #ff4d4d; /* Viền đỏ khi có lỗi */
    }

    /* Cải thiện hiển thị của thông báo lỗi trên form */
    .form-group input:focus.invalid {
        border-color: #ff4d4d; /* Đổi màu viền thành đỏ khi trường có lỗi và được focus */
    }

    /* Thông báo lỗi trong summary */
    .text-danger {
        color: #ff4d4d; /* Màu đỏ cho thông báo lỗi */
        font-size: 0.875rem;
        font-weight: bold;
    }
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #121212; /* Nền đen */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff; /* Chữ trắng */
    }

    .container {
        width: 400px;
        background-color: #fff; /* Khung trắng */
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px 30px;
        position: relative;
    }

        .container h1 {
            font-size: 1.8rem;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            position: relative;
        }

    .close-btn {
        position: absolute;
        top: 0;
        right: 0;
        background: none;
        border: none;
        color: #fff;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s;
    }

        .close-btn:hover {
            color: #ff4d4d;
        }

    .form-group {
        margin-bottom: 15px;
        position: relative;
    }

        .form-group label {
            font-size: 0.9rem;
            color: #333; /* Màu chữ cho label */
            margin-bottom: 5px;
            display: block;
        }

        .form-group input {
            width: 100%;
            padding: 10px 10px 10px 35px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-group input:focus {
                border-color: #6c63ff;
            }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #6c63ff;
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background: #6c63ff;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-primary i {
            margin-right: 8px;
        }

        .btn-primary:hover {
            background: #5750d3;
        }

    .text-link {
        text-align: center;
        margin-top: 15px;
    }

        .text-link a {
            color: #6c63ff;
            text-decoration: none;
            transition: color 0.3s;
        }

            .text-link a:hover {
                color: #5750d3;
                text-decoration: underline;
            }

        .text-link span {
            margin-top: 10px;
            display: block;
        }

    .btn-google {
        background-color: #db4437;
        color: white;
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

        .btn-google i {
            margin-right: 8px;
        }

        .btn-google:hover {
            background-color: #c1351d;
        }

    /* Cải thiện khoảng cách cho phần Sign Up */
    .sign-up-container {
        text-align: center;
        margin-top: 15px;
        padding-top: 20px;
    }

        .sign-up-container a {
            color: #6c63ff;
            font-weight: bold;
        }

            .sign-up-container a:hover {
                color: #5750d3;
                text-decoration: underline;
            }
</style>

<div class="container">
    <h1>
        Login
        <button class="close-btn" onclick="window.location.href='/'">
            <i class="fa fa-times"></i>
        </button>
    </h1>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Nhập Email -->
        <div class="form-group">
            <i class="fa fa-user"></i>
            <label asp-for="Input.Email">Username</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Enter your username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span> <!-- Hiển thị lỗi màu đỏ -->
        </div>

        <!-- Nhập Mật khẩu -->
        <div class="form-group">
            <i class="fa fa-lock"></i>
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Enter your password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span> <!-- Hiển thị lỗi màu đỏ -->
        </div>

        <button id="login-submit" type="submit" class="btn-primary">
            <i class="fa fa-sign-in"></i> Sign In
        </button>

        <div class="text-link">
            <a asp-page="./ForgotPassword">Forgot your password?</a>
        </div>

        <!-- Đảm bảo Sign Up link ở giữa -->
        <div class="sign-up-container">
            <span>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></span>
        </div>

     
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Thêm SweetAlert2 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.all.min.js"></script>

    <script>
        // Kiểm tra lỗi khi submit form
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'There was an error with your login credentials!',
                    showConfirmButton: true
                });
            </text>
        }
    </script>
}
