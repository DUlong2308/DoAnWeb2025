@page
@model WebApplicationlaptop.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #121212; /* Nền đen */
        color: #fff; /* Chữ trắng */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        width: 400px;
        background-color: #fff; /* Khung trắng */
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 30px 40px;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    hr {
        border: 1px solid #ddd;
        margin: 10px 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 0.9rem;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-group input:focus {
                border-color: #6c63ff;
            }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background: #6c63ff; /* Màu nền nút */
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: #5750d3;
        }

    .text-link {
        text-align: center;
        margin-top: 15px;
    }

        .text-link a {
            color: #6c63ff;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s;
        }

            .text-link a:hover {
                color: #5750d3;
                text-decoration: underline;
            }

    .alert-info {
        background-color: #333;
        color: #fff;
        border: 1px solid #444;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }

    .alert-success {
        background-color: #28a745;
        color: #fff;
        border: 1px solid #218838;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }

    .alert-danger {
        background-color: #ff4d4d;
        color: #fff;
        border: 1px solid #cc0000;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="Input_Email"><i class="fas fa-envelope"></i> Email</label>
            <input asp-for="Input.Email" class="form-control" placeholder="Nhập email của bạn" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Gửi liên kết reset mật khẩu
        </button>
    </form>

    <div class="text-link">
        <a asp-page="./Login">
            <i class="fas fa-arrow-left"></i> Quay lại trang đăng nhập
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
