@page
@model WebApplicationlaptop.Areas.Identity.Pages.Account.ForgotPasswordConfirmation

@{
    Layout = null;
    ViewData["Title"] = "Xác nhận quên mật khẩu";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #121212; /* Nền đen */
        color: #fff; /* Chữ trắng */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        width: 400px;
        background-color: #fff; /* Khung trắng */
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 30px 40px;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    p {
        text-align: center;
        font-size: 1rem;
        color: #666;
        margin: 20px 0;
    }

    .text-link {
        text-align: center;
        margin-top: 20px;
    }

        .text-link a {
            color: #6c63ff;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s;
        }

            .text-link a:hover {
                color: #5750d3;
                text-decoration: underline;
            }

    .alert-info {
        background-color: #333;
        color: #fff;
        border: 1px solid #444;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }

    .alert-success {
        background-color: #28a745;
        color: #fff;
        border: 1px solid #218838;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }

    .alert-danger {
        background-color: #ff4d4d;
        color: #fff;
        border: 1px solid #cc0000;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <p>
        <i class="fas fa-check-circle"></i> Chúng tôi đã gửi một liên kết để bạn có thể reset mật khẩu của mình. Vui lòng kiểm tra email của bạn.
    </p>

    <div class="text-link">
        <a asp-page="./Login">
            <i class="fas fa-arrow-left"></i> Quay lại trang đăng nhập
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
