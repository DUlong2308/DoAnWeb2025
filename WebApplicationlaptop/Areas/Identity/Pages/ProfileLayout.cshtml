@{
    Layout = null; // Đặt Layout là null nếu bạn không muốn kế thừa từ layout khác
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/backend/css/anhxemtruoc.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h3>@ViewData["Title"]</h3>
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">Profile</a>
                    <a href="/Identity/Account/Manage/ChangePassword" class="list-group-item list-group-item-action">Change Password</a>
                    <a href="/Identity/Account/Manage/Email" class="list-group-item list-group-item-action">Change Email</a>
                    <a href="/Identity/Account/Logout" class="list-group-item list-group-item-action" onclick="confirmLogout()">Logout</a>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9">
                @RenderBody() <!-- Nơi nội dung của trang con sẽ được hiển thị -->
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmLogout() {
            if (confirm("Bạn có chắc chắn muốn đăng xuất không?")) {
                window.location.href = '/Identity/Account/Manage/Logout';
            }
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>