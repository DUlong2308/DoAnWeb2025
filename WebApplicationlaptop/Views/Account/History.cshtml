@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "List History Orders placed by " + ViewBag.UserEmail;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container mt-5">
        <h3>List History Orders placed by @ViewBag.UserEmail</h3>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Order Code</th>
                    <th>Shipping Cost</th>
                    <th>UserName</th>
                    <th>Order Status</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.OrderCode</td>
                            <td>@string.Format("{0:N0} VND", @item.ShippingCost / 10)</td>

                         
                            <td>@item.UserName</td>
                            <td>
                                @if (item.Status == 0)
                                {
                                    <span class="text text-info">Chưa xác nhận</span>  <!-- Mới thêm trạng thái Chưa xác nhận -->
                                }
                                else if (item.Status == 1)
                                {
                                    <span class="text text-success">Đã xác nhận</span> <!-- Đã xác nhận -->
                                }
                                else if (item.Status == 2)
                                {
                                    <span class="text text-danger">Đã xử lý</span> <!-- Đã xử lý -->
                                }
                                else
                                {
                                    <span class="text text-warning">Trạng thái khác</span> <!-- Trạng thái không xác định -->
                                }
                            </td>
                            <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Account" asp-route-id="@item.Id">Xem</a>
                               
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No orders found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>