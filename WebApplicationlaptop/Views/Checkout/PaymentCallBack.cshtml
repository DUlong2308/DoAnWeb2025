@using WebApplicationlaptop.Models.Momo
@model MomoExecuteResponseModel
@{
    ViewData["title"] = "Kết quả thanh toán thành công";
}
<div class="payment-success">
    <div class="success-icon text-center">
        <i class="bi bi-check-circle-fill"></i>
    </div>
    <h3 class="text-center text-success">Thanh toán MOMO thành công!</h3>
    <h5 class="text-center text-primary">Cảm ơn bạn đã mua hàng tại shoplaptopld!</h5>
    <div class="payment-details">
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Order Info:</strong> @Html.Raw(Model.OrderInfo)</p>
        <p><strong>Tổng tiền:</strong> @Model.Amount VND</p>

    </div>
    <div class="text-center">
        <a href="/" class="btn btn-primary btn-home">Quay về trang chủ</a>
    </div>
</div>

<style>
    .payment-success {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .success-icon {
        font-size: 60px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .payment-details {
        font-size: 18px;
        color: #333;
        margin-top: 20px;
        line-height: 1.6;
    }

        .payment-details p {
            margin: 5px 0;
        }

    .btn-home {
        margin-top: 20px;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-home:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff;
        }

    h3.text-success {
        font-weight: bold;
    }

    h5.text-primary {
        font-style: italic;
        margin-top: 10px;
    }
</style>
