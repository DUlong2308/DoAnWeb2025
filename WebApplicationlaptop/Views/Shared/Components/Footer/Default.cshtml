@model IEnumerable<WebApplicationlaptop.Models.InformationshopModel>

@foreach (var item in Model)
{
    <div class="footer-container">
        <!-- Footer Main Section -->
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <!-- Logo and Shop Name Section -->
                    <div class="col-sm-3">
                        <div class="footer-logo">
                            @if (!string.IsNullOrEmpty(item.Logo))
                            {
                                <img src="~/@item.Logo" alt="Shop Logo" class="footer-logo-img" />
                            }
                            else
                            {
                                <img src="~/Images/logo.png" alt="Default Logo" class="footer-logo-img" />
                            }
                            <h3 class="footer-shop-name">@item.Name</h3>
                        </div>
                    </div>

                    <!-- About Shopper Section -->
                    <div class="col-sm-3">
                        <div class="about-shopper">
                            <h4>About Us</h4>
                            <p>@Html.Raw(item.Description)</p>

                            <!-- Display Google Maps if a map URL is provided -->
                           
                        </div>
                    </div>

                    <!-- Contact Info Section -->
                    <div class="col-sm-3">
                        <div class="contact-info">
                            <h4>Contact Us</h4>
                            <ul class="footer-contact">
                                <li><a href="tel:@item.Phone"><i class="fa fa-phone"></i> @item.Phone</a></li>
                                <li><a href="mailto:@item.Email"><i class="fa fa-envelope"></i> @item.Email</a></li>
                            </ul>
                            <!-- Social Media Icons -->
                            <div class="social-media">
                                <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-3">
                    @if (!string.IsNullOrEmpty(item.Map))
                    {
                        <div class="footer-map" width="30%" height="30%" style="border:0;" allowfullscreen="" loading="lazy">
                            @Html.Raw(item.Map)
                        </div>

                    }
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Bottom Section -->
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <p>&copy; @DateTime.Now.Year @item.Name </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- CSS for Footer -->
<style>
    .footer-container {
        background-color: black;
        color: #fff;
        padding: 30px 0;
    }

    .footer-main {
        padding-bottom: 30px;
        border-bottom: 1px solid black;
    }

    .footer-logo-img {
        width: 120px;
        height: auto;
        margin-bottom: 15px;
    }

    .footer-shop-name {
        font-size: 24px;
        font-weight: bold;
        color: #ecf0f1;
    }

    .about-shopper, .contact-info {
        margin-top: 20px;
    }

        .about-shopper h4, .contact-info h4 {
            font-size: 22px;
            color: #ecf0f1;
            margin-bottom: 10px;
        }

    .footer-links, .footer-contact {
        list-style: none;
        padding: 0;
    }

        .footer-links li, .footer-contact li {
            margin-bottom: 10px;
        }

        .footer-links a, .footer-contact a {
            color: #95a5a6;
            text-decoration: none;
        }

            .footer-links a:hover, .footer-contact a:hover {
                color: #ecf0f1;
            }

    .footer-bottom {
        background-color: #C0C0C0;
        padding: 20px 0;
    }

        .footer-bottom p {
            margin: 0;
            color: #ecf0f1;
        }

    .social-media {
        margin-top: 15px;
    }

    .social-icon {
        display: inline-block;
        margin: 0 10px;
        font-size: 20px;
        color: #ecf0f1;
        text-decoration: none;
    }

        .social-icon:hover {
            color: #3498db;
        }

        .social-icon i {
            margin-right: 8px;
        }

    .footer-map {
        margin-top: 15px;
    }

        .footer-map iframe {
            width: 100% !important;
            height: 300px !important; /* Điều chỉnh chiều cao */
        }
</style>
