@model IEnumerable<WebApplicationlaptop.Models.InformationshopModel>

<div class="header_top bg-light py-2">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="contactinfo">
                    <ul class="nav nav-pills">
                        @foreach (var item in Model)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="tel:@item.Phone"><i class="fas fa-phone"></i> @item.Phone</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="mailto:@item.Email"><i class="fas fa-envelope"></i> @item.Email</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="social-icons float-end">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://dribbble.com" target="_blank"><i class="fab fa-dribbble"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://plus.google.com" target="_blank"><i class="fab fa-google-plus"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div><!-- /header_top -->

<footer id="footer">
    <div class="footer-widget">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-2">
                        <div class="single-widget">
                            @if (!string.IsNullOrEmpty(item.Logo))
                            {
                                <img src="~/@item.Logo" alt="@item.Name" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <img src="~/Images/logo.png" alt="Default Logo" style="width: 100px; height: auto;" />
                            }
                            <h5>@item.Name</h5>
                        </div>
                    </div>
                }
                <div class="col-sm-10">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            <!-- Partial View for Login -->
                          
                          
                                <partial name="_LoginPartial" />
                            
                          
                               
                           
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- CSS -->
